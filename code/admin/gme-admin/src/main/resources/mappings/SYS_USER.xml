<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.manage.sys.dao.Sys_user_DAO">

	<!-- 实体和表的映射关系 -->
	<resultMap type="Sys_user" id="responseMap">
		<result property="id" column="ID"/>
		<result property="username" column="USERNAME"/>
		<result property="userpwd" column="USERPWD"/>
		<result property="truename" column="TRUENAME"/>
		<result property="phone" column="PHONE"/>
		<result property="qq" column="QQ"/>
		<result property="email" column="EMAIL"/>
		<result property="roleid" column="ROLEID"/>
		<result property="status" column="STATUS"/>
		<result property="createtime" column="CREATETIME"/>
	</resultMap>
	<!-- 获取分页数据 -->
	<select id="selectPage" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM SYS_USER 
		WHERE 1=1 
		<if test="userName!=null">
			AND USERNAME like '%${userName}%'
		</if>
		<if test="phone!=null">
			AND PHONE like '%${phone}%'
		</if>
		<if test="truename!=null">
			AND TRUENAME like '%${truename}%'
		</if>
		LIMIT
		<if test="PSIZE==null">10</if><if test="PSIZE!=null">#{PSIZE}</if>
		OFFSET
		<if test="BEGIN==null">0</if><if test="BEGIN!=null">#{BEGIN}</if>
	</select>
	<!-- 获取分页数据总条数 -->
	<select id="selectPageCount" resultType="int" parameterType="java.util.Map">
		SELECT COUNT(1) FROM SYS_USER
		WHERE 1=1 
		<if test="userName!=null">
			and USERNAME like '%${userName}%'
		</if>
		<if test="phone!=null">
			and PHONE like '%${phone}%'
		</if>
		<if test="truename!=null">
			and TRUENAME like '%${truename}%'
		</if>
	</select>
	<!-- 添加单条记录 -->
	<insert id="add" parameterType="SYS_USER" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO SYS_USER(USERNAME,USERPWD,TRUENAME,PHONE,QQ,EMAIL,ROLEID,STATUS,CREATETIME) VALUES(#{username},#{userpwd},#{truename},#{phone},#{qq},#{email},#{roleid},#{status},NOW())
	</insert>
	<!-- 获取单条记录 -->
	<select id="getById" parameterType="int" resultMap="responseMap">
		SELECT * FROM SYS_USER WHERE 
		ID=#{id} 
	</select>
	<!-- 更新单条记录 -->
	<update id="update" parameterType="SYS_USER">
		UPDATE SYS_USER
		<set>
				<if test="username!=null">
					USERNAME=#{username},
				</if>
				<if test="userpwd!=null">
					USERPWD=#{userpwd},
				</if>
				<if test="truename!=null">
					TRUENAME=#{truename},
				</if>
				<if test="phone!=null">
					PHONE=#{phone},
				</if>
				<if test="qq!=null">
					QQ=#{qq},
				</if>
				<if test="email!=null">
					EMAIL=#{email},
				</if>
				<if test="roleid!=null">
					ROLEID=#{roleid},
				</if>
				<if test="status!=null">
					STATUS=#{status} 
				</if> 
		</set>
		WHERE  
		ID=#{id} 
	</update>
	<!-- 删除单条记录 -->
	<delete id="deleteById" parameterType="int">
		DELETE FROM SYS_USER WHERE 
		ID=#{id} 
	</delete>
	<!-- 获取所有数据 -->
	<select id="selectAll" parameterType="java.util.Map" resultMap="responseMap">
		SELECT * FROM SYS_USER WHERE 1=1 
		<if test="userName!=null">
			AND USERNAME =#{userName}
		</if>
		<if test="status!=null">
			AND STATUS =#{status}
		</if>
	</select>
</mapper>
